    "js-yaml": "^4.1.1",
    "launchdarkly-node-server-sdk": "^7.0.4",
    "lodash": "^4.17.21",
    "mocha-lcov-reporter": "^1.3.0",
    "multer": "2.0.2",
    "nocache": "^4.0.0",
    "node-fetch": "^2.6.11",
    "node-git-info-json": "^0.1.1",
    "numeral": "^2.0.6",
    "nunjucks": "^3.2.4",
    "nyc": "^17.1.0",
    "otp": "^0.1.3",
    "randomstring": "^1.3.1",
    "request": "^2.88.2",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "uuid": "^11.1.0",
    "validator": "^13.15.23"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^15.0.0",
    "@pact-foundation/pact-node": "^10.18.0",
