    "config": "^4.1.1",
    "eslint": "^8.57.0",
    "eslint-plugin-mocha": "^11.2.0",
    "git-rev-sync": "^3.0.2",
    "mocha": "^11.0.0",
    "mocha-jenkins-reporter": "^0.4.8",
    "mocha-junit-reporter": "^2.0.0",
    "mocha-multi": "^1.1.7",
    "mochawesome": "^7.1.4",
    "nock": "^14.0.10",
    "nodemon": "^3.1.9",
    "pa11y": "^9.0.1",
    "phantomjs-prebuilt": "^2.1.16",
    "pre-commit": "^1.2.2",
