{
  "name": "probate-caveats-frontend",
  "description": "Web app to check if an applicant is eligible to apply for caveats online",
  "version": "0.0.1",
  "license": "MIT",
  "engines": {
    "node": ">=12.15.0"
  },
  "scripts": {
    "setup": "NODE_PATH=. yarn sass && yarn git-info && yarn sass-ie8",
    "start": "NODE_PATH=. node server.js",
    "debug": "NODE_PATH=. node inspect server.js",
    "prestart:dev": "yarn sass:watch",
    "start:dev": "NODE_PATH=. nodemon -e js,json --watch 'app/' --watch 'test/' -x 'node server.js'",
    "sass:watch": "NODE_PATH=. watch 'yarn -s sass' app/assets/sass/ &",
    "sass": "NODE_PATH=. node-sass app/assets/sass/application.scss --output public/stylesheets --quiet --output-style expanded --source-map true --include-path node_modules/govuk_template_jinja/assets/stylesheets --include-path node_modules/govuk_frontend_toolkit/stylesheets --include-path node_modules/govuk-elements-sass/public/sass/",
    "sass-ie8": "NODE_PATH=. node-sass app/assets/sass/application-ie8.scss --output public/stylesheets --quiet --output-style expanded --source-map true --include-path node_modules/govuk_template_jinja/assets/stylesheets --include-path node_modules/govuk_frontend_toolkit/stylesheets --include-path node_modules/govuk-elements-sass/public/sass/",
    "test": "NODE_ENV=testing  yarn test-unit -- $@ &&  yarn test-component -- $@ && yarn test-route",
    "test-unit": "NODE_ENV=testing  NODE_PATH=. LOG_LEVEL=error mocha test/unit --reporter spec --recursive --timeout 10000",
    "test-component": "NODE_ENV=testing  NODE_PATH=. LOG_LEVEL=error mocha test/component --reporter spec --recursive --timeout 10000",
    "test-route": "NODE_ENV=testing  NODE_PATH=. LOG_LEVEL=error mocha test/route --reporter spec --recursive --timeout 10000",
    "test:a11y": "NODE_ENV=testing  NODE_PATH=. LOG_LEVEL=error ENABLE_TRACKING=false mocha test/accessibility --timeout 30000",
    "test-accessibility": "NODE_ENV=testing  NODE_PATH=. LOG_LEVEL=error ENABLE_TRACKING=false mocha test/accessibility --timeout 30000",
    "test-e2e": "NODE_ENV=testing  NODE_PATH=. node ./node_modules/codeceptjs/bin/codecept.js run -c ./test/end-to-end/ --steps --reporter mochawesome",
    "test-crossbrowser-e2e": "NODE_ENV=testing NODE_PATH=. codeceptjs run -c test/end-to-end/saucelabs.conf.js --steps",
    "test:smoke": "NODE_ENV=testing  mocha test/smoke/healthcheck.js --timeout 30000 --reporter spec",
    "lint": "NODE_PATH=. eslint .",
    "eslint": "NODE_PATH=. eslint .",
    "eslint-dev:all": "NODE_PATH=. eslint . -c .eslintrc-dev.js",
    "eslint-dev:file": "NODE_PATH=. eslint -c .eslintrc-dev.js",
    "test:nsp": "NODE_PATH=. nsp check",
    "security": "NODE_PATH=. nsp check",
    "test:functional": "NODE_ENV=testing  ./bin/run-functional-tests.sh",
    "test:fullfunctional": "NODE_ENV=testing  ./bin/run-functional-tests.sh",
    "test:codecov-upload": "NODE_ENV=test NODE_PATH=. istanbul cover _mocha './test/**/test*.js' -- -R spec && codecov",
    "test:coverage": "NODE_ENV=test NODE_PATH=. istanbul cover _mocha './test/**/test*.js'",
    "test:stryker": "NODE_PATH=. stryker run ",
    "test:mutation": "NODE_PATH=. stryker run test/mutation/mutation_unittests.conf.js",
    "test:mutation-shell": "./bin/run-mutation-tests.sh",
    "sonar-scanner": "node_modules/sonar-scanner/bin/sonar-scanner",
    "sonar-scan": "node_modules/sonar-scanner/bin/sonar-scanner -Dsonar.projectName='Probate :: caveats-fe' -Dsonar.sources=app -Dsonar.cpd.exclusions=app/steps/** -Dsonar.exclusions=app/core/**,app/assets/** -Dsonar.language=js -Dsonar.javascript.lcov.reportPaths=coverage/lcov.info",
    "git-info": "node-git-info-json",
    "//": "The below scripts are just stubs, don't use them in production",
    "stub:orchestrator": "NODE_PATH=. node test/service-stubs/orchestrator.js",
    "stub:s2s": "NODE_PATH=. node test/service-stubs/s2s.js",
    "stub:idam": "NODE_PATH=. node test/service-stubs/idam.js",
    "stub:feature-toggles": "NODE_PATH=. node test/service-stubs/feature-toggles.js"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "@hmcts/ctsc-web-chat": "^0.3.9",
    "@hmcts/nodejs-logging": "^3.0.0",
    "@hmcts/os-places-client": "^1.0.4",
    "@hmcts/properties-volume": "^0.0.9",
    "ajv": "^4.11.8",
    "applicationinsights": "^1.4.0",
    "body-parser": "^1.19.0",
    "cheerio": "^1.0.0-rc.3",
    "co": "^4.6.0",
    "config": "^3.3.0",
    "connect-redis": "^3.4.2",
    "cookie-parser": "^1.4.4",
    "csurf": "^1.10.0",
    "dateformat": "^3.0.3",
    "debug": "^4.1.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-urlrewrite": "^1.2.0",
    "file-type": "^12.1.0",
    "govuk-frontend": "^3.5.0",
    "helmet": "^3.21.3",
    "https-proxy-agent": "^5.0.0",
    "i18next": "^17.0.11",
    "ioredis": "^4.14.0",
    "js-yaml": "^3.13.1",
    "lodash": "^4.17.15",
    "mocha-lcov-reporter": "^1.3.0",
    "multer": "^1.4.2",
    "node-fetch": "^2.2.0",
    "node-git-info-json": "^0.1.1",
    "node-sass": "^4.12.0",
    "numeral": "^2.0.6",
    "nunjucks": "^3.2.0",
    "otp": "^0.1.3",
    "randomstring": "^1.1.5",
    "request": "^2.88.0",
    "require-directory": "^2.1.1",
    "serve-favicon": "^2.5.0",
    "uuid": "^3.3.2",
    "validator": "^11.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "codacy-coverage": "3.2.0",
    "codeceptjs": "^2.2.1",
    "codecov": "^4.0.0-0",
    "eslint": "^6.1.0",
    "eslint-plugin-mocha": "^6.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.5.3",
    "mocha-jenkins-reporter": "^0.4.2",
    "mochawesome": "^4.0.1",
    "nock": "^10.0.6",
    "nodemon": "^1.19.1",
    "nsp": "^3.2.1",
    "pa11y": "^5.3.0",
    "phantomjs-prebuilt": "^2.1.16",
    "pre-commit": "^1.2.2",
    "proxyquire": "^2.1.3",
    "puppeteer": "^1.19.0",
    "rewire": "^4.0.1",
    "selenium-standalone": "^6.16.0",
    "sinon": "^1.17.7",
    "sinon-chai": "^3.3.0",
    "sonar-scanner": "^3.1.0",
    "sonarqube-scanner": "^2.5.0",
    "stryker": "^1.0.1",
    "stryker-api": "^0.24.1",
    "stryker-html-reporter": "^0.18.1",
    "stryker-javascript-mutator": "^0.14.1",
    "stryker-mocha-framework": "^0.15.1",
    "stryker-mocha-runner": "^0.17.1",
    "superagent": "^5.1.0",
    "supertest": "^4.0.2",
    "watch": "^1.0.2",
    "when": "^3.7.8"
  }
}
