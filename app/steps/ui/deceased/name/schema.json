{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "deceased-name",
  "type": "object",
  "properties": {
    "firstName": {
      "type": "string",
      "minLength": 2,
      "pattern": "^[^<>]+$"
    },
    "lastName": {
      "type": "string",
      "minLength": 2,
      "pattern": "^[^<>]+$"
    }
  },
  "required": [
    "lastName",
    "firstName"
  ]
}
